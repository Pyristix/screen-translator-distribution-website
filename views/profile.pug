extends layout

block content
  link(rel='stylesheet', href='/stylesheets/profile-style.css')
  h1.centered My Profile
  
  div.sign-in-background.centered
  h3.centered= username
  form.centered(method='POST' action='')
    label(for='password') New Password:
    input.form-control(type='password' name='password' required='true')
    button.centered(type='submit') Change Password
  if input_error
    p.centered#input-error-message= input_error